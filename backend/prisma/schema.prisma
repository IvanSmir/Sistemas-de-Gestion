generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Cargos {
  id          String  @id @default(uuid())
  name        String  @unique
  description String?
  vacancies   Int?
}

model Employees {
  id        String @id @default(uuid())
  name      String
  email     String @unique
  image     String
  gender    String
  direction String
  ruc       String
  joinDate  String
  birthdate String
  phone     String
}
